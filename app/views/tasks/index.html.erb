<h1>This is your awesome task manager!</h1>

<ul>
  <% @tasks.each do |task| %>
    <li>
      <%= task.name %>
      <%= link_to 'View', task_path(task) %>
      <%= link_to 'Edit', edit_task_path(task) %>
      <%= link_to 'Delete', task_path(task), method: :delete %>
    </li>
  <% end %>
</ul>
<p><%= link_to "Create a new task", new_task_path %></p>
